<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoriesFragment"
    android:background="#adad">

    <RelativeLayout
        android:id="@+id/saveCameraGalaryRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageViewRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/saveCameraGelaryLLayout"
            >

            <ImageView
                android:id="@+id/imageSelectPlaceIV"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/saveImaageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description"
                android:layout_margin="10dp"/>
        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:id="@+id/saveCameraGelaryLLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/imageSaveBtn"
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    />
                <ImageView
                    android:id="@+id/cameraSelectIV"
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_camera_black_24dp"

                    />
                <ImageView
                    android:id="@+id/gelarySelectIV"
                    android:layout_width="0dp"
                    android:layout_weight=".33"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_broken_image_black_24dp"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>